@model List<CityViewModel>
@{
    ViewData["Title"] = "AddPersonToCity";
}

<h1>AddPersonToCity</h1>
<div class="container">
    <div class="container-fluid">
        <a asp-action="ReturnToPeopleIndex">Return to Main Menu</a>
        <p></p>
        <a asp-action="CityIndex">Return to City Table</a>
        <div class="form-group"></div>
        <form asp-action="AddPersonToCity" method="post">
            <div class="container-fluid col-lg-10">
                <label>Person: </label>
                <select name="personid" class="form-control" asp-items="ViewBag.People"></select>
            </div>
            <div class="container-fluid col-lg-10">
                <label>City: </label>
                <select name="cityid" class="form-control" asp-items="ViewBag.Cities"></select>

                <input type="submit" value="Add person to City" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Person Name</th>
                    <th>Phonenumber</th>
                    <th>City</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PersonName</td>
                        <td>@item.Phonenumber</td>
                        <td>@item.CityName</td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>